#!/bin/bash
# postinst script for linkat-alumnat-edc-custom
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    configure)
	  if [  -e /usr/share/linkat/linkat-alumnat-edc-custom/linkat-alumnat-edc-custom.sh ]; then 
            chmod 755 /usr/share/linkat/linkat-alumnat-edc-custom/linkat-alumnat-edc-custom.sh
          fi
	  if [  -e /usr/share/linkat/linkat-alumnat-edc-custom/linkat-restaura-escriptori.sh ]; then 
            chmod 755 /usr/share/linkat/linkat-alumnat-edc-custom/linkat-restaura-escriptori.sh
          fi
	  if [  -e /usr/share/linkat/linkat-alumnat-edc-custom/linkat-alumnat-edc-custom.desktop ]; then
             cp /usr/share/linkat/linkat-alumnat-edc-custom/linkat-alumnat-edc-custom.desktop /etc/xdg/autostart/.
          fi
	  if [  -e /usr/share/linkat/linkat-alumnat-edc-custom/master_preferences ]; then
             cp /usr/share/linkat/linkat-alumnat-edc-custom/master_preferences /usr/lib/chromium-browser/.
          fi
	  if [ -e /usr/share/linkat/linkat-alumnat-edc-custom/linkat-restaura-escriptori.desktop ]; then
		  desktop-file-install /usr/share/linkat/linkat-alumnat-edc-custom/linkat-restaura-escriptori.desktop
	  fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
