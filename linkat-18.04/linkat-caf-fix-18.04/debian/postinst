#!/bin/bash
# postinst script for linkat-caf-fix
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
	configure)
	if [ -f /etc/init.d/CA-DSM ]; then
		if [ -z "$(grep caf\ kill\ all /etc/init.d/CA-DSM)" ]; then
			cp /etc/init.d/CA-DSM /etc/init.d/CA-DSM.bak
			sed -i 's/sd_jexec\ unit/\#sd_jexec\ unit/g' /etc/init.d/CA-DSM
			sed -i '/#sd_jexec\ unit=\.\ shutdown\ >>/a\\t\t\tcaf\ kill\ all\ \>\/dev\/null 2>&1' /etc/init.d/CA-DSM 
		fi
	fi
	if [  -d /usr/share/linkat/linkat-caf-fix ]; then 
		chmod 750 /usr/share/linkat/linkat-caf-fix/*.sh
		chown root:root /usr/share/linkat/linkat-caf-fix/*.sh
	fi
	if [ -e /usr/share/linkat/linkat-caf-fix/linkat-caf-cron ]; then
		cp /usr/share/linkat/linkat-caf-fix/linkat-caf-cron /etc/cron.d/
		chmod 644 /etc/cron.d/linkat-caf-cron
	fi
	invoke-rc.d cron reload >/dev/null 2>&1
	if [ -f /usr/share/linkat/linkat-caf-fix/linkat-caf-status ]; then
		cp /usr/share/linkat/linkat-caf-fix/linkat-caf-status /etc/sudoers.d/
		chmod 640 /etc/sudoers.d/linkat-caf-status
	fi
	if [ -f /usr/share/linkat/linkat-caf-fix/linkat-caf-status.desktop ]; then
		desktop-file-install /usr/share/linkat/linkat-caf-fix/linkat-caf-status.desktop
	fi
	if [ -e /usr/share/linkat/linkat-caf-fix/scala_centro_CA.csv ]; then
		chmod 640 /usr/share/linkat/linkat-caf-fix/scala_centro_CA.csv
	fi
	if [ -d /opt/configuracio ]; then
		cp /usr/share/linkat/linkat-caf-fix/config*.sh /opt/configuracio/
		chmod 750 /opt/configuracio/*.sh
		chown root:root /opt/configuracio/config*.sh
	fi
	if [ -f /opt/configuracio/caf_reinstall_flag ]; then
		rm /opt/configuracio/caf_reinstall_flag
	fi
	if [ -f /opt/configuracio/caf_remote_install_flag ]; then
		rm /opt/configuracio/caf_remote_install_flag
	fi
	if [ -f /opt/configuracio/linkat-scala_server_check ]; then
		rm /opt/configuracio/linkat-scala_server_check
	fi
	if [ -n "$(grep mnt-recuperacio /etc/fstab)" ]; then
		if [ -z "$(mount |grep mnt-recuperacio)" ]; then
			mount /opt/configuracio/mnt-recuperacio
		fi
		if [ -n "$(mount |grep mnt-recuperacio)" ]; then
			if [ -e /opt/configuracio/mnt-recuperacio/config ]; then
				cp /usr/share/linkat/linkat-caf-fix/scala_centro_CA.csv /opt/configuracio/mnt-recuperacio/config/.
				dos2unix /opt/configuracio/mnt-recuperacio/config/scala_centro_CA.csv >/dev/null 2>&1
				chmod 640 /opt/configuracio/mnt-recuperacio/config/scala_centro_CA.csv
				chown root:root /opt/configuracio/mnt-recuperacio/config/scala_centro_CA.csv
			fi
		fi
	fi
	sleep 1
	umount /opt/configuracio/mnt-recuperacio
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
