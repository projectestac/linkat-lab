#!/bin/bash
# postinst script for linkat-chromeos
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    configure)
	  if [ -e /usr/share/linkat/linkat-lock-edc/linkat-lock-edc-cron ]; then
             cp /usr/share/linkat/linkat-lock-edc/linkat-lock-edc-cron /etc/cron.d/.
          fi
	  if [ -e /usr/share/linkat/linkat-lock-edc/linkat-lock-edc.tar ]; then
		  chmod 640 /usr/share/linkat/linkat-lock-edc/linkat-lock-edc.tar
		  tar -xf /usr/share/linkat/linkat-lock-edc/linkat-lock-edc.tar --directory=/usr/share/linkat/linkat-lock-edc/
	  fi
	  if [ -e /usr/share/linkat/linkat-lock-edc/linkat-lock-edc.sh ]; then
		  chown root:root /usr/share/linkat/linkat-lock-edc/linkat-lock-edc.sh
                  chmod 750 /usr/share/linkat/linkat-lock-edc/linkat-lock-edc.sh
	  fi
	  if [ -e /usr/share/linkat/linkat-lock-edc/40_custom ]; then
		  chown root:root /usr/share/linkat/linkat-lock-edc/40_custom
                  chmod 640 /usr/share/linkat/linkat-lock-edc/40_custom
	  fi

	  invoke-rc.d cron reload >/dev/null 2>&1
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
