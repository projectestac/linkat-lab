#!/bin/bash
# postrm script for linkat-mblock
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in 
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
	if [ -e /usr/share/applications/linkat-mblock.desktop ]; then
		rm /usr/share/applications/linkat-mblock.desktop
	fi
	if [ -e /usr/share/applications/linkat-mblock-web.desktop ]; then
		rm /usr/share/applications/linkat-mblock-web.desktop
	fi
	if [ -e /usr/share/applications/mlink-start.desktop ]; then
		rm /usr/share/applications/mlink-start.desktop
	fi
	if [ -e /usr/share/applications/mlink-stop.desktop ]; then
		rm /usr/share/applications/mlink-stop.desktop
	fi
	update-desktop-database
	if [ -e /etc/sudoers.d/linkat-mblock ]; then
		rm /etc/sudoers.d/linkat-mblock
	fi
    ;;
    purge)
    ;;
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
