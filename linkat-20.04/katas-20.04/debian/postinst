#!/bin/bash
# postinst script for katas
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    configure)
	if [ -e /usr/share/katas/newk.sh ]; then
		chmod 755 /usr/share/katas/newk.sh
	fi
	if [ -e /usr/share/katas/newk_shortcuts.sh ]; then
		chmod 755 /usr/share/katas/newk_shortcuts.sh
	fi
	if [ -e /usr/share/katas/haskellstack.sh ]; then
		chmod 755 /usr/share/katas/haskellstack.sh
	fi	
	if [ -e /usr/share/katas/newk_shortcuts.desktop ]; then
		cp /usr/share/katas/newk_shortcuts.desktop /etc/xdg/autostart/
	fi
#	if [ -e /usr/share/katas/newk.desktop ]; then
#		desktop-file-install /usr/share/katas/newk.desktop
#	fi
	if [ ! -L /bin/newk ]; then
		ln -s /usr/share/katas/newk.sh /bin/newk
	fi
	if [ ! -L /bin/haskellstack ]; then
		ln -s /usr/share/katas/haskellstack.sh /bin/haskellstack
	fi
	if [ -e /usr/share/katas/stack.tar.gz ]; then
		tar -zxf /usr/share/katas/stack.tar.gz --directory=/usr/share/katas/
		chown root:root /usr/share/katas/stack
	fi
	if [ ! -L /bin/stack ]; then
		ln -s /usr/share/katas/stack /bin/stack
	fi
	
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
